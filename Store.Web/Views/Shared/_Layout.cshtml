<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Мудрый Орех</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Store.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white">
            <a class="navbar-brand" asp-area=" asp-controller="Home" asp-action="Index">Мудрый Орех</a>
            <form class="form-inline my-2 my-lg-0" style="display: flex" action="@Url.Action("Index", "Search")" method="get">
                <input class="form-control mr-sm-2 " type="search" name="query" placeholder="Поиск товаров" />
                <button class="btn-outline-success my-2 my-sm-0" type="submit">Найти</button>
            </form>
            <span class="navbar-text" style="margin-left:auto">
                @{
                    if (Context.Session.TryGetCart(out Cart cart) && cart.TotalCount > 0)
                    {
                        <a href="@Url.Action("Index", "Order")">В корзине @cart.TotalCount товаров на сумму @cart.TotalPrice</a>
                    }
                    else
                    {
                        @:Корзина пуста
                    }
                }
            </span>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div class="container">
        <main>
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
